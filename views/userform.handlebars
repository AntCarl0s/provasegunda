<div class="container">
    <h1>Cadastro de Funcionarios</h1>
    <form action="/users/save" method="post">




    <div class="row">
        <div class="col-4">
  <label for="nome_completo">Digite seu nome completo:</label>
  <input type="text" id="nome_completo" name="nome_completo" class="form-control"><br>
  </div>
  </div> 


    <div class="row">
        <div class="col-4">
  <label for="data_nascimento"> Digite a sua data de nascimento:</label>
  <input type="date" id="data_nascimento" name="data_nascimento" class="form-control"><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <label for="tipo_cargo"> Qual o seu cargo?</label>
  <input type="text" id="" name="tipo_cargo"  class="form-control"><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <label for="valor_salario">Digite o valor do salario:</label>
  <input type="number" id="valor_salario" name="valor_salario" step="0.01" class="form-control"><br>
  </div>
  </div>

     <div class="row">
        <div class="col-4">
  <label for="data_entradaempresa"> Digite a data que voce entrou na empresa:</label>
  <input type="date" id="data_entradaempresa" name="data_entradaempresa" class="form-control"><br>
  </div>
  </div>


      <div class="row">
        <div class="col-4">
  <label for="setor">Digite o setor da empresa:</label>
  <input type="text" id="setor" name="setor" class="form-control"><br>
  </div>
  </div> 



    <div class="row">
        <div class="col-4">
  <button type="submit" class="btn btn-primary">Salvar</button>
  </div>
  </div>

    </form>
</div>